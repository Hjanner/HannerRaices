extends ../layout/index

block contenido 
    body.bg-gray-500
        div.pb-3.text-gray-900
            h1.text-5xl.my-5.font-normal.mb-5 Hanner
                span.font-bold Raíces
            h2.text-center.text-2xl.text-gray-900.font-normal.mb-5 Recupera tu cuenta

        div.bg-white.max-w-md.mx-auto.p-5.rounded-lg.shadow-lg
            form(action="/register" method="post")
                div.mb-6
                    label(for="email").block.text-black-800.mb-3.text-left Ingresa tu correo electrónico para buscar tu cuenta
                    input#email(type="email" name="email" placeholder="Ingresa tu correo electrónico" class="w-full px-4 py-2 font-normal border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500")

                div.inline-flex.items-center.justity-between
                    a(href="/auth/login" class="w-full bg-grey-900 text-black font-bold py-2 px-4 rounded-lg hover:bg-gray-200 border")
                        | Cancelar
                    a(class="w-full bg-blue-900 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-800")
                        | Buscar

