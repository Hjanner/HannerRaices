extends ../layout/index

block contenido 
    body.bg-gray-500
        div.pb-3.text-gray-900
            h1.text-5xl.my-5.font-normal.mb-5 Hanner
                span.font-bold Raíces
            h2.text-center.text-2xl.text-gray-800.font-bold.my-5= pagina 

        div(class="bg-white shadow p-8 px-4 rounded-xl max-w-md mx-auto")
            p(class= error ? 'bg-red-500' : 'bg-green-500').py-2.rounded-lg.text-xl.font-normal.text-center.text-gray-700.text-white= mensaje

            if !error
                div(class="pt-8")
                    a(href="/auth/login" class="w-full bg-blue-900 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-800 ") Iniciar Sesión